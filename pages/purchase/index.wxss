  }
  .saveBtn{
    width: 580rpx;
    height: 80rpx;
    border-radius: 50rpx;
    background-color: #176eff;
    margin-left: 86rpx;
    margin-top: 90rpx;
  }
  .saveBtn text{
    line-height: 80rpx;
    color: #ffffff;
    font-size: 26rpx;
    margin-left: 260rpx;
  }
  .logo_img{
    bottom: 30rpx;
    left: 315rpx;
    position: absolute;
  }
  
  .logo_img image{
    width: 130rpx;
    height: 130rpx;
  }
  .warning{
    padding: 0 0 10rpx 40rpx;
    font-size: 24rpx;
    color:#176eff;
  }
  .yzCode{
    position: fixed;
    top:50%;
    left:50%;
    z-index: 120;
    width: 90%;
    border-radius: 10rpx;
    background-color: #fff;
    transform: translate(-50%,-50%);
    overflow: hidden;
  }
  .yzCode .codeTitle{
    color:#333;
    font-size: 32rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f5f5f5;
  }
  .yzCode .codeInput{
    padding: 60rpx;
    box-sizing: border-box;
  }
  .yzCode .codeInput input{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border:1px solid #e5e5e5;
    border-radius: 10rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
  }
