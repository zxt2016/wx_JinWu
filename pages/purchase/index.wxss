page{
  background-color: #f8f8f8;
}
.content{
  width: 710rpx;
  height: 350rpx;
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 30rpx;
}
.order_num{
  font-size: 26rpx;
  font-weight: 500;
  height: 85rpx;
  line-height: 85rpx;
  border-bottom: 1rpx solid #f3f3f3;
  padding-left: 30rpx;
}
.station{
  padding-left: 30rpx;
  font-size: 30rpx;
  font-weight: 700;
  height: 80rpx;
  line-height: 80rpx;
}
.num{
  float: left;
  width: 150rpx;
  color: #737373;
  font-size: 26rpx;
  padding-left: 30rpx;
}
/*主容器*/
.stepper {
  width:80px;
  height:26px;
  margin: 0 180rpx;
  border: 1px solid #ccc;
  border-radius: 3px;
  }
  /*加号和减号*/
  .stepper text {
  float: left;
  width: 19px;
  line-height: 26px;
  text-align: center;
  }
  /*数值*/
  .stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  }
  /*普通样式*/
  .stepper .normal {
  color:black;
  }
  /*禁用样式*/
  .stepper .disable {
  color: #ccc;
  }

  .content_item{
    width: 25%;
    color: #737373;
    font-size: 26rpx;
    padding-left: 30rpx;
    margin-top: 20rpx;
  }
  .content_item:first-child{
    width: 65%;
  }
  .item{
    height: 45rpx;
    line-height: 45rpx;
  }
  .icon{
    width: 25rpx;
    height: 25rpx;
    margin-right: 15rpx;
  }
  .agreement{
    margin-left: 50rpx;
    font-size: 22rpx;
  }
  .chakan{
    color: #2663c8;
    border-bottom: 1rpx solid #2663c8;
  }
  .saveBtn{
    width: 580rpx;
    height: 80rpx;
    border-radius: 50rpx;
    background-color: #176eff;
    margin-left: 86rpx;
