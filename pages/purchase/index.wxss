/*主容器*/

.fenE{
  display: flex;
  align-items: center;
  justify-content: start;
}

.stepper {
  width:120px;
  height:26px;
  border: 1px solid #ccc;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
  /*加号和减号*/
  .stepper text {
    width: 30px;
    line-height: 26px;
    text-align: center;
  }
  /*数值*/
  .stepper input {
    width: 60px;
    height: 26px;
    margin: 0 auto;
    text-align: center;
    font-size: 12px;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
  }
  /*普通样式*/
  .stepper .normal {
  color:black;
  }
  /*禁用样式*/
  .stepper .disable {
  color: #ccc;
  }
.infoBox{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
  .content_item{
    width: 50%;
    color: #737373;
    font-size: 26rpx;
    /* padding-left: 30rpx; */
    margin-top: 20rpx;
  }
  .content_item:first-child{
    width: 55%;
  }
  .item{
    height: 60rpx;
    line-height: 60rpx;
  }
  .icon{
    width: 36rpx;
    height: 36rpx;
    margin-right: 15rpx;
  }
  .agreement{
    padding-left: 40rpx;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: start;
    box-sizing: border-box;
  }
  .chakan{
    color: #2663c8;
