/* pages/myAddress_addEdit/index.wxss */
.address .addItem{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
}
.address .addItem text{
  color:#666;
  font-size: 26rpx;
  display: block;
  width: 120rpx;
}
.address .addItem input{
  padding: 14rpx 20rpx;
  width: 80%;
  border:0;
  color:#333;
  font-size: 26rpx;
  background-color: transparent;
}
.address .addItem picker{
  width: 80%;
}
.address .addItem .picker{
  padding: 14rpx 20rpx;
  width: 100%;
  border:0;
  color:#333;
  font-size: 26rpx;
  background-color: transparent;
}
.addSave {
  width: 100%;
  position: fixed;
  bottom:100px;
  left:50%;
  transform: translateX(-50%);
}
.addSave button{
  width: 90% !important;
  color:#fff;
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 50rpx;
  background-color: #2c7bfe;
  border:0;
}
