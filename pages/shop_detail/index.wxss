page{
  height: 100%;
  /* box-sizing: border-box; */
  padding-bottom: 80rpx;
  background-color: #f5f5f5;
}
.flex_center{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shop_detail {
  background-color: #fff;
}
.shop_detail swiper{
  width: 750rpx;
  height: 550rpx;
  border-bottom: 1px solid #f5f5f5;
}
.shop_detail swiper swiper-item {
  overflow: hidden;
}
.shop_detail swiper swiper-item image{
  width: auto;
  height: 500rpx;
  display: block;
  margin:0 auto;
}
.shopInfo{
  padding:30rpx;
  box-sizing: border-box;
}
.shopInfo .jiFen{
  font-size: 22rpx;
  color:#fff;
  padding:6rpx 0;
  margin-top: 5px;
}
.shopInfo .jiFen text{
  display: inline-block;
  padding: 1px 10px;
  box-sizing: border-box;
  background: url('https://www.jwpower.cn/image/border.png') center no-repeat;
  background-size: 100% 100%;
}
.shopInfo .price {
  display: flex;
  align-items: baseline;
  justify-content: flex-start;
  margin-top: 20rpx;
}
.shopInfo .price .newPrice{
  font-size: 38rpx;
  color:#F56C6C;
  padding-right:20rpx;
}
.shopInfo .price .oldPrice{
  color:#666;
  font-size: 22rpx;
  text-decoration:line-through
}
.buyBtn{
  width: 100%;
  padding:20rpx 0;
  text-align: center;
  color:#fff;
  font-size: 28rpx;
  background-color: #F56C6C;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 999;
}
.sliderUp{
  margin-top:20rpx;
  padding:15rpx 0;
  text-align: center;
  font-size: 22rpx;
  color:#999;
  background-color: #fff;
}
.sliderUp image{
  width: 24rpx;
  height: 24rpx;
  display: block;
  margin:0 auto 6rpx auto;
}
.projectInfo{
  width: 100%;
  /* min-height: 600rpx; */
  padding:0;
  box-sizing: border-box;
  /* margin-bottom:250rpx; */
  background-color: #fff;
  border-radius: 10rpx;
}
.projectInfo .tabMain{
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
}
.projectInfo .tabMain .tabItem{
  width: 25%;
}
.tabMain .swiper-tab-list{
  text-align: center;
  font-size: 28rpx;
  padding:20rpx 0;
}
.tabMain .swiper-tab-list.active{
  border-bottom: 2px solid #2c7bfe;
}
.specsItem{
  width: 100%;
  color:#666;
  padding:15rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #f8f8f8;
}
.specsInfo{
  width: 100%;
  padding:15rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
}
.specsInfo text{
  font-size: 24rpx;
  display: inline-block;
}
.specsInfo text:first-child{
  color:#999;
  width: 100rpx;
}


.projectInfo .swiperTitle{
  padding: 40rpx;
  box-sizing: border-box;
}
.projectInfo .swiperTitle text{
  display: block;
  padding-left: 10rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  border-left: 2px solid #2c7bfe;
}
.projectInfo .infoMain{
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.projectInfo .infoMain .timeTab{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin:0 0 40rpx 0;
}
.projectInfo .infoMain .timeTab view{
  width: 100rpx;
  padding: 10rpx 0;
  font-size: 28rpx;
  text-align: center;
  border:1px solid #2c7bfe;
}
.projectInfo .infoMain .timeTab view:first-child{
  border-radius: 40px 0 0 40px;
}
.projectInfo .infoMain .timeTab view:first-child+view{
  border-left:0;
  border-right: 0;
}
.projectInfo .infoMain .timeTab view:first-child+view+view{
  border-radius: 0 40px 40px 0 ;
}
.projectInfo .infoMain .timeTab .active{
  color:#fff;
  background-color: #2c7bfe;
}
.projectInfo .infoMain .info_item{
  display: flex;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
}
/* .projectInfo .infoMain .info_item:first-child{
  border-top: 0;
} */
.projectInfo .infoMain .info_item text{
  padding:18rpx 0;
}
.projectInfo .infoMain .info_item .info_value{
  color:#666;
  font-size: 26rpx;
}
.shopDetail swiper{
  background-color: #f8f8f8;
}


.address{
  width: 100%;
  min-height: 400rpx;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 1999;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}
.addressBtnBox{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
  font-size: 28rpx;
  color:#2c7bfe;
}
.addressBtnBox .canlce{
  color:#666;
}
/* pages/myAddress/index.wxss */
.addressList{
  max-height: 1000rpx;
  overflow-y: auto;
  padding: 30rpx;
  box-sizing: border-box;
}
.addressList .listItem{
  position: relative;
  padding: 15rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.addressList .listItem .itemView{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 24rpx;
  color:#666;
  padding: 5rpx 0;
  width: 510rpx;
}
.addressList .listItem .itemView:first-child{
  font-size: 28rpx;
  color:#333;
}
.addressList .listItem .itemView text:first-child{
  display: block;
  width: 160rpx;
}
.editImg{
  display: block;
  width: 80rpx;
  height:80rpx;
  position: absolute;
  top:50%;
  right:80rpx;
  padding: 18rpx;
  box-sizing: border-box;
  transform: translateY(-50%);
}
.delImg{
  display: block;
  width: 80rpx;
  height:80rpx;
  position: absolute;
  top:50%;
  right:0;
  padding: 18rpx;
  box-sizing: border-box;
  transform: translateY(-50%);
}

