<!--index.wxml-->
<view class='view_body'>
  <!-- 轮播 -->
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
      <block wx:for="{{banner_img}}" wx:key="*this">
        <swiper-item class="swiper_img">
          <image src="{{item}}" style="width:100%;height:100%;"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 全部电站/我的电站 -->
  <view class='stationBox'>
    <!-- tab切换 -->
    <view class='tabMain'>
      <view class="tabItem {{stationType == 1?'active':''}}" data-num='1' bindtap="stationTab">
        <view class="item_view">
          <image class='left_icon ' src="{{imgUrl}}/index/index_icon1_{{stationType == 1?'blue':'grey'}}.png"></image>
          <text>全部招募单</text>
          <image class='right_icon' src="{{imgUrl}}/index/right_icon_{{stationType == 1?'blue':'grey'}}.png"></image>
        </view>
      </view>  
      <view class="tabItem {{stationType == 2?'active':''}}" data-num='2' bindtap="stationTab">
        <view class="item_view">
          <image class='left_icon' src="{{imgUrl}}/index/index_icon2_{{stationType == 2?'blue':'grey'}}.png"></image>
          <text>我的项目</text>
          <image class='right_icon' src="{{imgUrl}}/index/right_icon_{{stationType == 2?'blue':'grey'}}.png"></image>
        </view>
      </view>     
    </view>
    <!-- 电站 -->
    <view class='stationMain'>
      <!-- 招募项目 星系特效-->
      <view class="sMain_item {{stationType == 1 ? 'tabShow':''}}">
        <view class="xk_box">
          <image class='xingKong' src="{{imgUrl}}/index/star/star_bg.png"></image>
        </view>
        <image class='star_line' src="{{imgUrl}}/index/star_line.png"></image>
        <view class="star_animted">
          <!-- 实时发电量 -->
          <view class="nowPower">实时发电量：{{projectPower}}kw</view>
          <!-- 太阳 -->
          <image class="sun" src="{{imgUrl}}/index/sun.png"></image>
          <!-- 星球 -->
          <view class="star_img">
            <image 
            wx:for="{{starData}}" 
            wx:for-item = 'item'
            class="star star{{item.num}}" 
            src="{{imgUrl}}/index/star/star{{index}}.png"></image>
          </view>

          <!-- 轮播 -->
          <view class="star_swiper">
            <view class="page-section page-section-spacing swiper">
              <swiper indicator-dots="{{indicatorDots2}}"
                autoplay="{{autoplay2}}" interval="{{interval2}}" duration="{{duration2}}" circular="{{circular2}}">
                <block wx:for="{{projectData}}" wx:for-item="item" wx:key="*this">
                  <swiper-item class="swiper_img">
                    <!-- <image class="project_star_img" src="{{item.trademark}}"></image> -->
                    <view class="project_box">
                      <image src="{{imgUrl}}/index/stationBox_bg.png" style="width:100%"></image>
                      <view class="project_item">
                        <view class="item_name">
                          <image src="{{item.trademark}}" style="width:70rpx;height:70rpx;"></image>
                          <text class="projectName txt-num1">{{item.projectName}}</text>
                          <text class="look_details" data-id="{{item.id}}" data-name="{{item.projectName}}" bindtap="lookDetails">详情 ></text>
                        </view>
                        <view class="item_data">
                          <view class="item_list txt-num1">地区：{{item.projectAddress}}</view>
                          <view class="item_list">总装机容量：{{item.capacity}} kw</view>
                          <view class="item_list">剩余认购份数：{{item.remainingNum}} 份</view>
                          <view class="item_list">总认购份数：{{item.subscriptionTotalNum}} 份</view>
                          <view class="item_list">年化收益率：<text style="color:red;">{{item.annualized}} %</text></view>
                        </view>
                        <view class="buyBtn {{power == 1 ? 'blueBtn' : ''}}" bindtap="renGou">认购</view>
                      </view>
                    </view>


                    <!-- <image src="{{item}}" style="width:100%"></image> -->
                  </swiper-item>
                </block>
              </swiper>
            </view>
          </view>
        </view>
      </view>
      <!-- 我的电站 -->
      <view class="sMain_item {{stationType == 2 ? 'tabShow':''}}">
        <view class="xk_box">
          <image class='xingKong' src="{{imgUrl}}/index/star/star_bg.png"></image>
        </view>
        <image class='star_line' src="{{imgUrl}}/index/star_line.png"></image>
        <view class="star_animted">
        <!-- 实时发电量 -->
          <view class="nowPower">实时发电量：{{myPower}}kw</view>
          <!-- 太阳 -->
          <image class="sun" src="{{imgUrl}}/index/sun.png"></image>
          <!-- 星球 -->
          <view class="star_img">
            <image 
            wx:for="{{starData}}" 
            wx:for-item = 'item'
            class="star star{{item.num}}" 
            src="{{imgUrl}}/index/star/star{{index}}.png"></image>
          </view>

          <!-- 轮播 -->
          <view class="star_swiper">
            <view class="page-section page-section-spacing swiper">
              <swiper wx:if="{{powerTip == 1}}" indicator-dots="{{indicatorDots2}}"
                autoplay="{{autoplay2}}" interval="{{interval2}}" duration="{{duration2}}" circular="{{circular2}}">
                <block wx:for="{{projectData2}}" wx:for-item="item" wx:key="*this">
                  <swiper-item class="swiper_img">
                    <!-- <image class="project_star_img" src="{{item.trademark}}"></image> -->
                    <view class="project_box">
                      <image src="{{imgUrl}}/index/stationBox_bg.png" style="width:100%"></image>
                      <view class="project_item">
                        <view class="item_name">
                          <image src="{{item.trademark}}" style="width:70rpx;height:70rpx;"></image>
                          <text class="projectName txt-num1">{{item.projectName}}</text>
                          <text class="look_details" data-id="{{item.id}}" data-name="{{item.projectName}}" bindtap="lookDetails">详情 ></text>
                        </view>
                        <view class="item_data">
                          <view class="item_list txt-num1">地区：{{item.projectAddress}}</view>
                          <view class="item_list">总装机容量：{{item.capacity}} kw</view>
                          <view class="item_list">剩余认购份数：{{item.remainingNum}} 份</view>
                          <view class="item_list">总认购份数：{{item.subscriptionTotalNum}} 份</view>
                          <view class="item_list">年化收益率：<text style="color:red;">{{item.annualized}} %</text></view>
                        </view>
                        <!-- <view class="buyBtn">认购</view> -->
                      </view>
                    </view>
                    <!-- <image src="{{item}}" style="width:100%"></image> -->
                  </swiper-item>
                </block>
              </swiper>
              <swiper wx:elif="{{powerTip == 2}}" indicator-dots="{{powerTip == 2 ? false : ''}}"
                autoplay="{{autoplay2}}" interval="{{interval2}}" duration="{{duration2}}" circular="{{circular2}}">
                <block>
                  <swiper-item class="swiper_img">
                    <!-- <image class="project_star_img" src="{{imgUrl}}/index/star0.png"></image> -->
                    <view class="project_box">
                      <image src="{{imgUrl}}/index/stationBox_bg.png" style="width:100%"></image>
                      <view class="project_item nothing_station">
                        <text>您还没有认购项目！</text>
                      </view>
                    </view>
                    <!-- <image src="{{item}}" style="width:100%"></image> -->
                  </swiper-item>
                </block>
              </swiper>
            </view>
          </view>
        </view>
      </view>

      <!-- 背景图标 -->
      <view class="station_bg_icon">
        <image src="{{imgUrl}}/index/station_bg.png"></image>
      </view>
    </view>
  </view>
  <!-- 收益模拟计算器 -->
  <view class="incomeCounter">
    <view class="counter_title">收益模拟计算器</view>
    <view class="counter_item getIn" style="border-bottom:1px solid #e5e5e5;">
      <view class="item_text">投入 <text>(万)</text></view>
      <view class="item_input">
        <input type="number" name="money" placeholder="请输入您的投入金额" placeholder-style="color:#999;"></input>
      </view>
    </view>
    <view class="counter_item">
      <view class="item_text">总装机容量 <text>(KW)</text></view>
      <view class="item_input">
        <input type="number" disabled='true' value="399.68"></input>
      </view>
    </view>
    <view class="counter_item">
      <view class="item_text">帮助 <text>(户)</text></view>
      <view class="item_input">
        <input type="number" disabled='true' value="8923"></input>
      </view>
    </view>
    <view class="counter_item">
      <view class="item_text">预计收益 <text>(万)</text></view>
      <view class="item_input">
        <input type="number" disabled='true' value="2399.68"></input>
      </view>
    </view>
    <view class="counter_item">
      <view class="item_text">回报率 <text>(%)</text></view>
      <view class="item_input">
        <input type="number" disabled='true' style="color:red" value="45.2"></input>
      </view>
    </view>
  </view>
</view>

