/* 电站招募 */
.stationBox{
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.stationBox .tabMain{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0;
  overflow: hidden;
}
.stationBox .tabMain .tabItem{
  width: 50%;
  font-size: 28rpx;
  padding: 30rpx 0;
}
.stationBox .tabMain .tabItem .item_view{
  display: flex;
  align-items: center;
  justify-content: center;
}
.stationBox .tabMain .tabItem .item_view .left_icon{
  display: block;
  height: 36rpx;
  width: 24rpx;
}
.stationBox .tabMain .tabItem .item_view .right_icon{
  display: block;
  height: 18rpx;
  width: 14rpx;
}
.stationBox .tabMain .tabItem:first-child+.tabItem .item_view .left_icon{
  width: 28rpx;
  height:28rpx;
}
.stationBox .tabMain .tabItem .item_view text{
  padding: 0 30rpx 0 10rpx;
}
.stationBox .tabMain .tabItem:first-child .item_view{
  border-right: 1px solid #ccc;
}
.stationBox .tabMain .tabItem.active{
  color:#2c7bfe;
}
.stationMain{
  /* padding: 30rpx; */
  box-sizing: border-box;
  box-shadow: 0 -6px 6px -5px rgba(204, 204, 204, 0.3);
}
.stationMain .sMain_item{
  width: 100%;
  height: 600rpx;
  display: none;
  position: relative;
}
.xk_box{
  background-color: #011327;
}
.stationMain .sMain_item .xingKong{
  min-width: 100%;
  height: 500rpx; 
  display: block;
}
.stationMain .sMain_item .star_line{
  position: absolute;
  left:50%;
  top:50%;
  z-index: 5;
  width: 80%;
  height:210rpx;
  transform: translate(-50%,-60%);
}
.stationMain .sMain_item .star_animted{
  position: absolute;
  left:0;
  top:0;
  z-index: 10;
  color:#fff;
  width: 100%;
  height: 500rpx; 
  transform-style: preserve-3d;
}
.star_animted .star{
  width: 140rpx;
  height:140rpx;
  position: absolute;
  top:50%;
  left:50%;
  z-index: 10;
  transform: translate(-50%,70%);
  /* transition:all 500ms ease; */
}
.star_animted .sun{
  width: 200rpx;
  height:200rpx;
  z-index: 20;
  transform: translate(-50%,-80%);
}
