/* pages/login/login.wxss */
.login_bg{
  height:100vh;
  position: relative;
  background-color: #fff;
}
.login_img{
  width: 100%;
  height: 440rpx;
}
.loginMain{
  position: absolute;
  top:150rpx;
  left:0;
  width: 100%;
  z-index: 10;
  display: block;
}
.login_title{
  width: 100%;
  padding: 0;
  text-align: center;
}
.login_form{
  width: 710rpx;
  padding:0;
  display: block;
  margin: 0 auto;
  padding: 60rpx;
  color:#999;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: 0 3px 5px 3px rgba(0, 0, 0, 0.1);
}
.form_item{
  width:100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #e5e5e5;
}
.form_item:first-child+.form_item{
  border-bottom: 0;
}
.form_item image{
  width: 23rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.form_item text{
  width: 140rpx;
  display: block;
  font-size: 28rpx;
  color:#333;
}
.form_item input{
  height:auto;
  display: block;
  padding: 14rpx 16rpx;
  font-size: 28rpx;
  color:#333;
  box-sizing: border-box;

}
.form_item input.phone{
  width: 540rpx;
  background-color: #fff;
}
.form_item input.code{
  width: 385rpx;
  padding: 14rpx 0;
  border-bottom: 1px solid #e5e5e5;
  background-color: #fff;
}
.form_item input.invite{
  width: 480rpx;
}
.form_item button{
  margin: 0;
}
.form_item button.getCode{
  width: 190rpx;
  padding-left: 0;
  padding-right: 0;
  font-size: 28rpx;  
  font-weight: normal;
  color:#176eff;
  margin-left: 20rpx;
  border-radius: 12rpx;
  border:1px solid #176eff;
  background-color: transparent;
}
.form_item button.submit{
  width: 100%;
  margin-top: 60rpx;
  width: 550rpx;
  border-radius: 60rpx;
  font-weight: normal;
  background-color: #176eff;
}
.agreement{
  padding-left: 0;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: start;
  box-sizing: border-box;
}
.chakan{
  color: #2663c8;
  border-bottom: 1rpx solid #2663c8;
}
.icon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}