<view class="container login_bg">
  <view class='login_title'>登录</view>
  <form class='login_form' bindsubmit="formSubmit">
    <view class='form_item'>
      <text>手机号：</text>
      <input class='phone' name='phone' placeholder="请输入手机号" value='15383899908'></input>
    </view>
    <view class='form_item'>
      <text>验证码：</text>
      <input class='code' name='code' value='123456'></input>
      <button class='getCode' type="default">获取验证码</button>
    </view>
     <view class='form_item'>
      <text>邀请码：</text>
      <input class='phone invite' name='inviteCode' placeholder="请输入邀请码" value=''></input>
    </view>
    <view class='form_item'>
      <button class='submit' type="primary" form-type="submit">登录</button>
    </view>
  </form>
</view>
