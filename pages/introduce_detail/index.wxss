page{
  width: 100%;
  padding-bottom: 300rpx;
  position: relative;
}
.main{
  min-height: 90vh;
}
.content_image{
  height: 280rpx;
  width: 680rpx;
  margin: 0 35rpx;
}
.introduce_detail{
  margin: 30rpx;
  padding: 40rpx;
  border: 1rpx solid #f3f3f3;
  box-shadow: 5rpx 5rpx 5rpx #f3f3f3;
  border-radius: 20rpx;
  background-color: #FFFFFF;
}
.content_title{
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.content{
  font-size: 24rpx;
  line-height: 50rpx;
  color: #444444;
  margin-bottom: 30rpx;
}
.title{
  font-size: 30rpx;
  font-weight: 700;
}
.line{
  border: 1px solid #176eff;
  width: 120rpx;
  margin: 15rpx 0rpx;
}
