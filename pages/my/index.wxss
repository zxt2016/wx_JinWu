
  
.page_box{
  padding:0 15rpx;
  box-sizing: border-box;
}
.section{
  width: 100%;
  height: 210rpx;
  background: #fff;
  border-radius: 10rpx;
  
  box-sizing: border-box;
  margin-bottom: 10rpx;
  position: relative;
}
.mineBg{
  width: 100%;
  height:100%;
}
.userBox{
  width: 100%;
  position: absolute;
  top:46rpx;
  left:0;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.section .userInfo{
  width: 70%;

}
.section .userInfo image{
  width: 125rpx;
  height: 125rpx;
  display: block;
  border-radius: 50%;
}
.section .userInfo .name_num{
  width: 260rpx;
  margin: 20rpx 0 0 20rpx;
  text-align: center;
}
.section .userInfo .name_num text{
  display: block;
  font-size: 24rpx;
  color:#666;
  margin-bottom: 4rpx;
  line-height: 60rpx;
}
.section .userInfo .name_num text:first-child{
  font-size: 28rpx;
  color:#333;
  font-family: PingFangSC-Medium, sans-serif;
}
.allnum{
  padding: 20rpx 0.5rpx;
}
.num_info{
  width: 50%;
  text-align: center;
}
.itemList{
  padding: 26rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 1rpx solid #dddddd;
}
.itemList .icon_img{
  width: 33rpx;
  height: 33rpx;
  margin: 5rpx 20rpx 0 0;
}
.itemList text{
  display: block;
  font-size: 28rpx;
}
.itemList .jtRt{
  width: 12rpx;
  height: 22rpx;
  margin-top: 10rpx;
}
.loginBtn{
  display: block;
  text-align: left;
  margin:25rpx 0 0 0 !important;
  background: transparent;
}
.loginBtn text{
  line-height: 40rpx;
}
